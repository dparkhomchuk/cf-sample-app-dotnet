@model IReadOnlyCollection<CfSample.Read.Models.PurchaseViewModel>
@{
    Layout = "_Layout";
}

<table border=1>
    <tr>
        <th>Price</th>
        <th>Product type</th>
        <th>Date</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Price</td>
            <td>@item.ProductType</td>
            <td>@item.Date</td>
        </tr>
    }
</table>

<form method="post">
    <label>Product:</label><br/>
    <input name="ProductName" /><br />
    <label>Price:</label><br/>
    <input name="Price" /><br />
    <button>Submit</button>
</form>